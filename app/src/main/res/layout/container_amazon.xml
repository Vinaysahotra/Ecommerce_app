<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:padding="3dp"
    android:id="@+id/frames"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="11dp"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="7dp"
    app:cardElevation="@dimen/cardview_default_elevation"
    android:padding="5dp"
    android:clickable="true"

    android:focusable="true"
    android:layout_margin="4dp"
    app:cardBackgroundColor="#353333"
    tools:ignore="PrivateResource">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:layout_height="wrap_content"
        android:padding="5dp">


        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_below="@+id/title"
            android:layout_marginTop="0dp" />

        <ImageView
            android:id="@+id/choice"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_below="@+id/buy_now"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="9dp"
            android:layout_toEndOf="@+id/prime" />

        <TextView
            android:id="@+id/title"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5sp"

            android:ellipsize="end"
            android:ems="20"
            android:lines="2"
            android:selectAllOnFocus="true"
            android:text="title"
            android:textColor="#FBF6F6"
            android:textIsSelectable="true"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/price"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginStart="8dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="3dp"

            android:layout_marginBottom="3dp"
            android:layout_toEndOf="@+id/thumbnail"
            android:text="@string/Rs"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <RatingBar
            android:id="@+id/rating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price"
            android:layout_marginStart="5dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/thumbnail"
            android:isIndicator="true"
            android:numStars="5"
            android:progressTint="#BFB609"
            android:stepSize="0.5" />

        <TextView
            android:id="@+id/discount"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="3dp"

            android:layout_marginBottom="3dp"
            android:layout_toEndOf="@+id/rating"
            android:text=""
            android:textColor="#F8F8F8"
            android:textSize="10sp" />

        <Button
            android:id="@+id/buy_now"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/discount"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:layout_toEndOf="@+id/thumbnail"
            android:background="#4A1F1F"
            android:text="buy now"
            android:textColor="#FFFF"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/prime"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_below="@+id/buy_now"
            android:layout_marginStart="5dp"
            android:layout_marginTop="9dp"

            android:layout_toEndOf="@+id/thumbnail" />

        <Button
            android:id="@+id/shareamazon"
            android:layout_width="63dp"
            android:layout_height="26dp"

            android:layout_alignTop="@+id/thumbnail"
            android:layout_alignEnd="@+id/thumbnail"
            android:layout_alignBottom="@+id/thumbnail"
            android:layout_alignParentStart="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="133dp"
            android:layout_marginEnd="91dp"
            android:layout_marginBottom="1dp"
            android:background="#4A1F1F"
            android:text="share"
            android:textColor="#FFFF"
            android:textIsSelectable="true"
            android:textSize="10sp"
            tools:ignore="SmallSp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView></FrameLayout>